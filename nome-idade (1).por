programa {
  funcao inicio() {
      //Algoritmo para exibir nome e idade
    
    //Declaração de variáveis
    cadeia nome
    inteiro idade

    //Atribuição de variáveis
    nome = "Eduardo"
    idade = 40

    escreva("Nome: ", nome)
    escreva("\nIdade: ", idade)

    //Atribuição com comando leia()
    escreva("\nDigite o seu nome: ")
    leia(nome)
    escreva("Digite a sua idade: ")
    leia(idade)

    escreva("Nome: ", nome)
    escreva("\nIdade: ", idade)

  }
}
